.search {
	height: 100rpx;
	padding-top: 10rpx;
	padding-bottom: 10rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.search-input {
	display: flex;
	align-items: center;
	height: 90rpx;
	width: 90%;
	background-color: #fff;
	border-radius: 40px;
	color: #ABABAB;
}

.search-content {
	display: flex;
	font-size: 28rpx;
}

.search-image {
	width: 40rpx;
	height: 40rpx;
	margin-left: 20rpx;
	margin-right: 10rpx;
	margin-top: 2px;
}