.unlogin {
	padding-top: 45%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.unlogin .unlogin-image {
	width: 150rpx;
	height: 150rpx;
}

.unlogin .unlogin-btn {
	margin-top: 50rpx;
	width: 80%;
	background-color: #B2A4EC;
	color: #fff;
}

.unlogin .unlogin-btn-active {
	margin-top: 50rpx;
	width: 80%;
	background-color: #d9d4ee;
	color: #333;
}

.info {
	background-color: #B2A4EC;
	padding-top: 70rpx;
	padding-bottom: 100rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.info .avatar-iamge {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
	border: 5rpx solid #fff;
	box-shadow: 10rpx 10rpx 10rpx #888888;
}

.info .nickname {
	color: #fff;
	margin-top: 30rpx;
	font-size: 32rpx;
	font-weight: bold;
}

.cell {
	margin-top: -50rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.cell-item {
	padding: 30rpx 20rpx;
	margin-bottom: 25rpx;
	width: 85%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #fff;
	border-radius: 20rpx;
}

.cell-left {
	display: flex;
	align-items: center;
}

.cell-left .cell-text {
	margin-left: 20rpx;
}

.cell-item .cell-image {
	width: 45rpx;
	height: 45rpx;
}

.cell-item .cell-icon {
	width: 25rpx;
	height: 30rpx;
}