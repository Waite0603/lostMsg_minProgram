page {
	background-color: #ffffff;
}

.body {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.title {
	padding: 60rpx 40rpx 0 40rpx;
}

.title .welcome {
	font-size: 50rpx;
	padding-bottom: 20rpx;
}

.title-msg {
	padding: 0 40rpx;
	font-size: 26rpx;
	line-height: 60rpx;
	color: #888888;
}

.from {
	display: flex;
	flex-direction: column;
	padding: 40rpx;
}

.from .from-item {
	margin: 10rpx 0;
	padding: 30rpx 0;
	border-bottom: 2rpx solid #ccc;
}

.from .from-item:focus {
	border-bottom: 2rpx solid #333333;
}

.from .btn-login {
	margin-top: 60rpx;
	width: 500rpx;
	border-radius: 60rpx;
	background-color: #B2A4EC;
	color: #ffffff;
}

.from .btn-login-hover {
	color: #333333;
}

.navigator {
	margin-top: 30rpx;
	text-align: center;
	color: rgb(24, 24, 153);
}
.navigator-hover {
	background-color: #fff;
  color:#B2A4EC;
}

.wave-media {
	margin-top: auto;
}

.wave {
  position: relative;
  align-items: center;
  height: 300rpx;
  background-color: #B2A4EC;
  overflow: hidden;
  margin-top: auto;
}

.wave view {
	content: "";
	position: absolute;
	left: 50%;
	min-width: 160%;
	min-height: 600px;
	background-color: #fff;
	animation-name: rotate;
	animation-iteration-count: infinite;
	animation-timing-function: linear;
}

.wave .wave-before {
	bottom: 30px;
	border-radius: 45%;
	animation-duration: 10s;
}

.wave .wave-after {
	bottom: 12px;
	opacity: .5;
	border-radius: 60%;
	animation-duration: 10s;
}

@keyframes rotate {
	0% {
		transform: translate(-50%, 0) rotateZ(0deg);
	}

	50% {
		transform: translate(-50%, -2%) rotateZ(180deg);
	}

	100% {
		transform: translate(-50%, 0%) rotateZ(360deg);
	}
}

.wave-fill {
	height: 100rpx;
	background-color: #B2A4EC;
}